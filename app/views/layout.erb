<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MEETUPS IN SPACE</title>
  <link rel="stylesheet" href="/stylesheets/stylesheet.css" type="text/css" charset="utf-8" />
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,400,600,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/stylesheets/normalize.css" />
  <link rel="stylesheet" href="/stylesheets/app.css" />
</head>
<body>

<div class="top-bar">
  <div class="container"><ul class="top-bar-section">
      <% if signed_in? %>
        <li>Signed in as <%= current_user.username %></a></li>
        <li><a href="/sign_out">Sign out</a></li>
      <% else %>
        <li><a href="/auth/github">Sign in</a></li>
      <% end %>
    </ul>
    <a class="logo" href="/">
      Meetups
      <br/>
      <small>in Space</small>
    </a>


  </div>
</div>

<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
